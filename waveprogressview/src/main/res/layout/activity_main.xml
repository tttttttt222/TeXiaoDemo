<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wpv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.gxz.waveprogressview.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:onClick="start"
        android:text="start" />

    <com.gxz.waveprogressview.WaveProgressView
        android:id="@+id/wpv_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        wpv:progress="15" />


    <com.gxz.waveprogressview.WaveProgressView
        android:id="@+id/wpv_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        wpv:maxProgress="80"
        wpv:progress_color="#dd65A6DA"
        wpv:progress_text_color="@color/colorAccent"
        wpv:progress_text_size="20sp"
        wpv:radius="60dp"
        wpv:radius_color="#AAffdd33" />

    <com.gxz.waveprogressview.WaveProgressView
        android:id="@+id/wpv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        wpv:maxProgress="120"
        wpv:progress_color="#DC7E2040"
        wpv:progress_text_size="13sp"
        wpv:radius="70dp"
        wpv:radius_color="#7F6B1AB3" />
</LinearLayout>
